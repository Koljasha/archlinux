# (name of class - command: xprop)
# assign [class="Terminator"] $workspace1
assign [class="Pcmanfm"] $workspace4
assign [class="firefox"] $workspace5
assign [class="vlc"] $workspace9
assign [class="Remmina"] $workspace10

# Screenshot
bindsym Print exec gnome-screenshot -a

# Volume control (type 1):
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +2%
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -2%
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle

# Image for i3lock:
bindsym $mod+Shift+l exec i3lock -c 000000 -i /usr/share/backgrounds/gnome/Endless-shapes.png

#
# Execute
#

# set screen resolution for Virtual Box
# exec --no-startup-id xrandr -s 1360x768

# Numlock on
exec --no-startup-id numlockx on

# Disable Xorg screensaver
exec --no-startup-id xset s off
exec --no-startup-id xset -dpms

# Transparency
exec --no-startup-id picom

# Backgroung image
exec --no-startup-id env DISPLAY=:0.0 feh --randomize --bg-scale /usr/share/backgrounds/gnome/

# PolicyKit Authentication Agent - Gnome
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Polybar
exec --no-startup-id ~/.config/polybar/i3.sh

# NetworkManager applet
exec --no-startup-id nm-applet

# Brightness:
exec --no-startup-id xrandr --output $(xrandr | grep "connected primary" | cut -d" " -f1) --brightness 0.8

